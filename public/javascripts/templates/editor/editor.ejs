<div class="<%= type %>">
    <% if (typeof html !== 'undefined' && html !== null) { html = html.replace(/^\s+|\s+$/g, ''); } %>
    <% if (type === 'content') { %>
        <div class="content-editor" contenteditable="true">
            <% if (html !== '' && html !== null) { %><%= html %><p><br></p><% } else { %><p><br></p><% } %>
        </div>
    <% } else if (type === 'string') { %>
        <div class="string-editor" contenteditable="true"><%= html %></div>
    <% } %>

    <div class="commands">
        <div>
            <a data-action="cancel" class="button">Cancel</a>
            <a data-action="save" class="button blue">Save</a>
        </div>
    </div>
</div>