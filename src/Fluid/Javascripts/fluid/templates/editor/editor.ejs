<div class="<%= type %>">
    <% if (type === 'content') { %>
        <div class="content-editor" contenteditable="true">
            <%= content %>
        </div>
    <% } else if (type === 'string') { %>
        <div class="string-editor" contenteditable="true">
            <%= content %>
        </div>
    <% } %>

    <div class="commands">
        <div>
            <a data-action="cancel" class="button">Cancel</a>
            <a data-action="save" class="button blue">Save</a>
        </div>
    </div>
</div>