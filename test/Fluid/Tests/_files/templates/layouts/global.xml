<fluid-layout xmlns="https://fluidcms.net/schemas/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="https://fluidcms.net/schemas/template https://fluidcms.net/schemas/template.xsd">

    <group name="Site">
        <variable name="Name" type="string"/>
        <variable name="Description" type="content"/>
        <image name="Logo" width="180" height="100" format="png">
            <format name="Retina" width="360" height="200" format="png"/>
            <format name="NoHeight" width="500" format="png"/>
            <format name="Original"/>
        </image>
        <variable name="New Var" type="string"/>
        <array name="MyArray">
            <image name="Image"/>
        </array>
    </group>
</fluid-layout>