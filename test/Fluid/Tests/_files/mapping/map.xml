<fluid-mapping xmlns="https://fluidcms.net/schemas/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="https://fluidcms.net/schemas/template https://fluidcms.net/schemas/template.xsd">
    <page name="home-page">
        <setting name="template" value="home" />
        <setting name="allow-childs" value="false" />
        <setting name="url" value="/" />
    </page>
    <page name="contact">
        <setting name="template" value="contact"/>
        <setting name="allow-childs" value="true"/>
        <setting name="child-templates" value="contact,contact-form"/>
        <setting name="url" value="/contact"/>
        <page name="form">
            <setting name="template" value="contact-form"/>
            <setting name="allow-childs" value="false"/>
            <setting name="url" value="/contact/form"/>
        </page>
    </page>
</fluid-mapping>